<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_configuration"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Remember.Shimmer">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/memory_line_name_shimmer"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/edit_memory_line_name_shimmer"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/common_shimmer_gradient"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/memory_line_name_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/memory_line_name_shimmer"
            app:layout_constraintStart_toEndOf="@id/memory_line_name_shimmer"/>

        <View
            android:id="@+id/add_participant_shimmer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/common_shimmer_gradient_rounded"
            app:layout_constraintTop_toBottomOf="@id/memory_line_name_shimmer"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/add_participant_text_shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintTop_toTopOf="@id/add_participant_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/add_participant_shimmer"
            app:layout_constraintStart_toEndOf="@id/add_participant_shimmer"/>

        <View
            android:id="@+id/quantity_participants_shimmer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/common_shimmer_gradient_rounded"
            app:layout_constraintTop_toBottomOf="@id/add_participant_shimmer"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/quantity_participants_text_shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintTop_toTopOf="@id/quantity_participants_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/quantity_participants_shimmer"
            app:layout_constraintStart_toEndOf="@id/quantity_participants_shimmer"/>

        <View
            android:id="@+id/line_shimmer"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:background="@drawable/common_shimmer_gradient"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantity_participants_shimmer"/>

        <View
            android:id="@+id/leave_memory_line_shimmer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/common_shimmer_gradient_rounded"
            app:layout_constraintTop_toBottomOf="@id/line_shimmer"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/leave_memory_line_text_shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintTop_toTopOf="@id/leave_memory_line_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/leave_memory_line_shimmer"
            app:layout_constraintStart_toEndOf="@id/leave_memory_line_shimmer"/>

        <View
            android:id="@+id/delete_memory_line_shimmer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/common_shimmer_gradient_rounded"
            app:layout_constraintTop_toBottomOf="@id/leave_memory_line_shimmer"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/delete_memory_line_text_shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintTop_toTopOf="@id/delete_memory_line_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/delete_memory_line_shimmer"
            app:layout_constraintStart_toEndOf="@id/delete_memory_line_shimmer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>