<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <View
        android:id="@+id/participant_profile_image_shimmer"
        android:background="@drawable/common_circle_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <View
        android:id="@+id/participant_name_shimmer"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/common_shimmer_gradient"
        app:layout_constraintBottom_toBottomOf="@id/participant_profile_image_shimmer"
        app:layout_constraintEnd_toStartOf="@+id/owner_memory_line_shimmer"
        app:layout_constraintStart_toEndOf="@id/participant_profile_image_shimmer"
        app:layout_constraintTop_toTopOf="@id/participant_profile_image_shimmer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/owner_memory_line_shimmer"
        android:layout_marginStart="16dp"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:background="@drawable/common_shimmer_gradient"
        app:layout_constraintTop_toTopOf="@id/participant_name_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/participant_name_shimmer"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>