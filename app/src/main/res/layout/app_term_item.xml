<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/term_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        style="@style/Remember.Style.SubTitle.Bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/term_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        style="@style/Remember.Style.Text.Big.Bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/term_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Remember.Style.Text.Small.OnPrimary"/>

</androidx.appcompat.widget.LinearLayoutCompat>