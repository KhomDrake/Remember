<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_moment_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Remember.Shimmer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/moment_image_shimmer"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/common_shimmer_gradient_rounded_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/owner_moment_shimmer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_shimmer_gradient_rounded"
            app:layout_constraintTop_toBottomOf="@id/moment_image_shimmer"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/date_shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintTop_toTopOf="@id/owner_moment_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/owner_moment_shimmer"
            app:layout_constraintStart_toEndOf="@id/owner_moment_shimmer"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/description_shimmer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/common_shimmer_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/owner_moment_shimmer"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/comments_shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/description_shimmer"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>