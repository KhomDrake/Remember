<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_memory_line_navigation"
    app:startDestination="@id/createMemoryLineFragment">

    <fragment
        android:id="@+id/createMemoryLineFragment"
        android:name="com.remember.memoryline.ui.CreateMemoryLineFragment"
        android:label="CreateMemoryLineFragment"
        tools:layout="@layout/memory_line_create_memory_line_fragment">
        <action
            android:id="@+id/action_createMemoryLineFragment_to_createMemoryLineAddParticipantFragment"
            app:destination="@id/createMemoryLineAddParticipantFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/createMemoryLineAddParticipantFragment"
        android:name="com.remember.memoryline.ui.CreateMemoryLineAddParticipantFragment"
        android:label="CreateMemoryLineAddParticipantFragment"
        tools:layout="@layout/common_add_participant_fragment"/>
</navigation>